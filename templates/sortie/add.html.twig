{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle sortie{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Créer une nouvelle sortie</h1>

    {{ form_start(sortieForm) }}
    <div class="container mt-4">
        <div class="card mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h5 class="card-title text-center mb-4">Détails de la sortie</h5>

                <div class="mb-3">
                    {{ form_row(sortieForm.nom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(sortieForm.debut, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(sortieForm.duree, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(sortieForm.dateLimitInscription, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(sortieForm.nbMaxParticipant, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(sortieForm.infosSortie, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(sortieForm.etat, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(sortieForm.site, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(sortieForm.lieu, {'attr': {'class': 'form-control', 'size' : '3'}}) }}
                </div>

                <!-- Bouton pour afficher le formulaire nouveauLieu -->
                <div class="mb-3">
                    <button type="button" class="btn btn-secondary" id="showNewLieuFormBtn">Ajouter un nouveau lieu</button>
                </div>

                <!-- Formulaire pour nouveauLieu caché par défaut -->
                <div id="newLieu" style="display: none;">
                    <div class="mb-3">
                        <label for="nouveauLieu" class="form-label">Ajouter un nouveau lieu</label>
                        {{ form_row(sortieForm.nouveauLieu.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(sortieForm.nouveauLieu.rue, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(sortieForm.nouveauLieu.lattitude, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(sortieForm.nouveauLieu.longitude, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(sortieForm.nouveauLieu.ville, {'attr': {'class': 'form-select', 'size' : '3'}}) }}
                        <div class="mt-3">
                            <button type="button" class="btn btn-secondary" id="showNewVilleFormBtn">Ajouter une nouvelle ville</button>
                        </div>
                    </div>
                </div>

                <!-- Formulaire pour nouvelleVille caché par défaut -->
                <div id="newVille" style="display: none;">
                    <div class="mb-3">
                        <label for="nouvelleVille" class="form-label">Ajouter une nouvelle ville</label>
                        {{ form_row(sortieForm.nouvelleVille.nom,{'attr': {'class': 'form-control'}} ) }}
                        {{ form_row(sortieForm.nouvelleVille.codePostal,{'attr': {'class': 'form-control'}} ) }}
                    </div>
                </div>
                <div class="mb-3">
                    {{ form_row(sortieForm.groupePrive, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(sortieForm.active, {'attr': {'class': 'form-check-input'}}) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Créer une sortie</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(sortieForm) }}

    <!-- Script pour afficher le formulaire nouveauLieu au clic du bouton -->
    <script>
        document.getElementById('showNewLieuFormBtn').addEventListener('click', function() {
            var newLieuForm = document.getElementById('newLieu');
            if (newLieuForm.style.display === 'none' || newLieuForm.style.display === '') {
                newLieuForm.style.display = 'block';
            } else {
                newLieuForm.style.display = 'none';
            }
        });
        document.getElementById('showNewVilleFormBtn').addEventListener('click', function() {
            var newVilleForm = document.getElementById('newVille');
            newVilleForm.style.display = (newVilleForm.style.display === 'none' || newVilleForm.style.display === '') ? 'block' : 'none';
        });
    </script>
{% endblock %}
