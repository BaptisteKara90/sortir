{% extends 'base.html.twig' %}

{% block title %}profil{% endblock %}

{% block body %}
    <h1>Profil de {{ user.nom|capitalize }} {{ user.prenom|capitalize }}</h1>

    <div><img src="{{ asset('uploads/profile_pictures/' ~ user.profilePicture) }}" alt="Photo de profil"></div>
    <div>
        <ul>
            <li>Prénom : {{ user.prenom|capitalize }}</li>
            <li>Nom : {{ user.nom|capitalize }}</li>
            <li>Numéro de téléphone : {{ user.telephone }}</li>
            <li>Email : {{ user.email }}</li>
            <li>Site de rattachement : {{ user.site.nom }}</li>
        </ul>
    </div>
    <div>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path("user_profile", {'id' : user.id }) }}">
            <button>Modifier</button>
        </a>
        {% endif %}
    </div>

{% endblock %}