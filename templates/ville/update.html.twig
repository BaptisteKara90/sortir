{% extends 'base.html.twig' %}

{% block title %}Modifier une ville{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Modifier une ville</h1>

        <div class="card mx-auto" style="max-width: 500px;">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.nom, 'Nom de la ville') }}
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.codePostal, 'Code postal') }}
                    {{ form_widget(form.codePostal, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning">Modifier</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
