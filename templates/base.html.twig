<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sortir ENI{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

    {% block stylesheets %}
    {% endblock %}
    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body>
<div class="containerMain">
    {% if app.user %}
    <header class="nav-container sticky-top">
        {% if app.user %}
        {% include 'menu/nav.html.twig' %}
        {% endif %}
    </header>
    {% endif %}
    <main>
        <a class="position-relative" style="top:10px; left:10px;" href="{{ app.request.headers.get('referer') }}">
            <button class="btn btn-outline-primary">Précédent</button>
        </a>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert {% if label == 'success' %}alert-success{% elseif label == 'error' %}alert-danger{% endif %} mt-3">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>
    <footer>
        {% include 'footer/footer.html.twig' %}
    </footer>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
